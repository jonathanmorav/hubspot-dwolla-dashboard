# Backend Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
API_KEY=your-secure-api-key-here
# Comma-separated list of allowed extension IDs (optional)
ALLOWED_EXTENSION_IDS=

# HubSpot OAuth Credentials
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Dwolla OAuth Credentials
DWOLLA_CLIENT_ID=your_dwolla_client_id_here
DWOLLA_CLIENT_SECRET=your_dwolla_client_secret_here
DWOLLA_ENVIRONMENT=sandbox # or production

# IMPORTANT: This file contains secrets!
# Never commit actual credentials to version control